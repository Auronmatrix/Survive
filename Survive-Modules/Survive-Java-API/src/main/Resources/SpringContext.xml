<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd

    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.muni.fi.pa165"/>

    
    <tx:annotation-driven mode="aspectj" transaction-manager="transactionManager" />
    
    <!-- Mapping Services -->
    <bean name="areaService" class="com.muni.fi.pa165.dao.service.impl.AreaServiceImpl"/>
    <bean name="monsterAreaService" class="com.muni.fi.pa165.dao.service.impl.MonsterAreaServiceImpl"/>
    <bean name="monsterService" class="com.muni.fi.pa165.dao.service.impl.MonsterServiceImpl"/>
    <bean name="monsterWeaponService" class="com.muni.fi.pa165.dao.service.impl.MonsterWeaponServiceImpl"/>
    <bean name="weaponService" class="com.muni.fi.pa165.dao.service.impl.WeaponServiceImpl"/>
    <bean name="systemUserService" class="com.muni.fi.pa165.dao.service.impl.SystemUserServiceImpl"/>

    <!-- Mapping DAO -->
    <bean name="areaDao" class="com.muni.fi.pa165.dao.jpa.AreaJpaDaoImpl"/>
    <bean name="monsterAreaDao" class="com.muni.fi.pa165.dao.jpa.MonsterAreaJpaDaoImpl"/>
    <bean name="monsterDao" class="com.muni.fi.pa165.dao.jpa.MonsterJpaDaoImpl"/>
    <bean name="monsterWeaponDao" class="com.muni.fi.pa165.dao.jpa.MonsterWeaponJpaDaoImpl"/>
    <bean name="weaponDao" class="com.muni.fi.pa165.dao.jpa.WeaponJpaDaoImpl"/>
    <bean name="systemUserDao" class="com.muni.fi.pa165.dao.jpa.SystemUserJpaDaoImpl"/> 
    
</beans>
